<h3 id="header">Update: </h3>

<div class="staff_container">
  <form method="post" action="/users/<%= @users.id %>">
    <label for='first_name'><p>First Name: </p></label>
    <input class="button" type="text" id="first_name" name="first_name" value="<%= @users.first_name %>"/>

    <label for='last_name'><p>Last Name: </p></label>
    <input class="button" type="text" id="last_name" name="last_name" value="<%= @users.last_name %>"/>

    <input class="button" type="submit" value="Update">
  </form>
</div>
